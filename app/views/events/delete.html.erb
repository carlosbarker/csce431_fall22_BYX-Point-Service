<%= link_to 'Back', events_path %>

<div>
  <h2>Delete Event</h2>

  <%= form_for(@event, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this event?</p>

    <p class="reference-name"><%= f.object.title %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Event") %>
    </div>

  <% end %>
</div>